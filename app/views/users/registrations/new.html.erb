<style>
  #pad{
    padding: 30px;
  }
  #form{
    width: 350px;
    height: 100%;
    border: 2px;
    border-style: groove;
    border-radius: 20px;
  }
</style>
<div id="pad" class="container-fluid">
  <div id="pad" class="container-fluid">
    <div id="form" class="container-fluid">

      <h2>Cadastro</h2>
        <hr>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="field">
          <%= f.label :nome %>
          <%= f.text_field :nome, autofocus: true, hide_label: true, placeholder: "Insira seu Nome"%>
        </div>

        <div class="field">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, hide_label: true, placeholder: "Insira seu Email" %>
        </div>

        <div class="field">
          <%= f.label :Senha %>
          <% if @minimum_password_length %>
          <em>(mínimo de <%= @minimum_password_length %> caracteres)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "off" , hide_label: true, placeholder: "Digite uma senha"%>
        </div>

        <div class="field">
          <%= f.label :Confirmação_da_senha %>
          <%= f.password_field :password_confirmation, autocomplete: "off" , hide_label: true, placeholder: "Confirme sua senha"%>
        </div>

        <div class="actions">
          <%= f.submit "Cadastrar", class:"btn btn-success" %>
        </div>
      <% end %>
      <%= render "users/shared/links" %>
      <br>
    </div>
  </div>
</div>
