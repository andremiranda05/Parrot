    <%= form_for(event) do |f| %>
      <% if event.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

          <ul>
          <% event.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>


      <div class="field">
        <%= f.label :nome_evento %>
        <%= f.text_field :nome_evento %>
      </div>

      <div class="field">
        <%= f.label :data_evento %>
        <%= f.date_select :data_evento %>
      </div>

      <div class="field">
        <%= f.label :descrição %>
        <%= f.text_area :descrição %>
      </div>

      <div class="field">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
      </div>

      <%= f.fields_for :event_place do |ff|%>
        <div class="field">
          <%= ff.label :name %>
          <%= ff.file_field :name %>
        </div>
        <div class="field">
          <%= ff.label :city %>
          <%= ff.file_field :city %>
        </div>
        <div class="field">
          <%= ff.label :estado %>
          <%= ff.file_field :estado %>
        </div>
        <div class="field">
          <%= ff.label :logradouro %>
          <%= ff.file_field :logradouro %>
        </div>
        <div class="field">
          <%= ff.label :numero %>
          <%= ff.file_field :numero %>
        </div>
        <div class="field">
          <%= ff.label :bairro%>
          <%= ff.file_field :bairro %>
        </div>
        <div class="field">
          <%= ff.label :referencia %>
          <%= ff.file_field :referencia %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
